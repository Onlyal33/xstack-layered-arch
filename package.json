{
  "name": "xstack-layered-arch",
  "version": "0.0.1",
  "description": "nodejs express app",
  "repository": {
    "type": "git",
    "url": "https://github.com/Onlyal33/xstack-layered-arch.git"
  },
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "start": "rm -rf dist && tsc && ./node_modules/.bin/pm2 start dist/index.js --name xstack-layered-arch-app",
    "stop": "./node_modules/.bin/pm2 stop xstack-layered-arch-app",
    "logs": "./node_modules/.bin/pm2 logs xstack-layered-arch-app",
    "db-start": "podman-compose up -d",
    "db-stop": "podman-compose down",
    "seed": "rm -rf dist && tsc && npx ts-node dist/seed",
    "db-seed": "npm run db-start && npm run seed",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Onlyal33",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "joi": "^17.12.3",
    "mongoose": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/mongoose": "^5.11.97",
    "@types/uuid": "^9.0.8",
    "pm2": "^5.3.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
